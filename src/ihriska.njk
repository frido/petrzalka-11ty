          <img src="img/ihriska/obvod6.jpg">
        </a>
        <caption>obvod 6</caption>
      </figure>
    </div>
  </section>
  {% for page in collections.playground %}
    <section class="container vertical">
      <h2>
        <a href="{{ page.url | url }}">v roku {{ page.data.year }}</a>
      </h2>
      {% for play in page.data.playgrounds %}
        <article class="article timeline {{ play.flag | playGroundStatus }}">
          <div class="row">
            <div class="col-md-3">
              <header>
                <h4>
                  {{ play.name }}
                </h4>
              </header>
            </div>
            <div class="col-md-2">
              {{ play.category | playGroundCategory}}
            </div>
            <div class="col-md-4">
              {{ play.flag | playGroundDescription}}
            </div>
            <div class="col-md-3 text-right">
                obvod {{ play.district }}
            </div>
          </div>

        </article>
      {% endfor %}
    </section>
  {% endfor %}
</div>