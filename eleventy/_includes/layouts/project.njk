---
layout: layouts/base.njk
templateClass: tmpl-post
---
<div class="paletteA">
    <section class="section">
        <header>
            <h1>{{ title }}</h1>
        </header>

        <div class="updated">
            {% if date %}
                <time datetime="{{ date }}">
                    aktualizované: {{ date | postDate }}
                </time>
            {% endif %}
        </div>
        <!-- TODO: remove  amount or amountAll -->
        {%- if amount or amountAll %}
            <div class="budget">
                <span class="amount">{{ amount }}€</span> z rozpočtu Petržalky
            {% if amountAll %}
                    <span class="amount">{{ amountAll }}€</span> celková cena projektu
            {% endif %}
            </div>
        {%- endif %}

<!-- TODO: duplicitne ako project-execution-box.njk -->
        {% if execution %}
            <h2 class="padding-top">Časová os</h2>
            <div class="XXX">
                {% for sch in execution %}
                    <article class="execution box {{ sch.status }}">
                        <div class="row">
                            <div class="col-md-10">
                                <h5 class="status-text {{ sch.status }}">{{ sch.title }}</h5>
                            </div>
                            <div class="col-md-2 text-right">
                                <span class="status-text {{ sch.status }}">{{sch.description}}</span>
                            </div>
                        </div>

                        <div class="sub">
                            {% for sub in sch.sub | reverse %}
                                <div class="row">
                                    <div class="col-md-8">
                                        {% if sub.source %}
                                            <a href="{{ sub.source }}" target="blank">
                                                <span>{{ sub.title }}</span>
                                            </a>
                                        {% else %}
                                            <span>{{ sub.title }}</span>
                                        {% endif %}
                                    </div>

                                    <div class="col-md-2">
                                        {% if sub.date %}
                                            <span>{{ sub.date | date}}</span>
                                        {% endif %}
                                    </div>

                                    <div class="col-md-2 text-right">
                                        <span class="status-text {{ sub.status }}">{{ sub.description }}</span>
                                    </div>

                                </div>
                            {% endfor %}
                        </div>

                    </article>
                {% endfor %}
            </div>
        {% endif %}

        {% if budgetRef %}
            <h2  class="padding-top">Rozpočet</h2>
            {% set budget = collections.budgetCollection | budgetFilterById(budgetRef) %}
            {% include "budget-box.njk" %}
        {% endif %}

        {% if gallery %}
            <div class="gallery">
                {% for image in gallery %}
                    <figure>
                        <a href="{{image.link}}">
                            <img src="{{image.link}}">
                        </a>
                        {{image.title}}
                    </figure>
                {% endfor %}
            </div>
        {% endif %}

        <div class="content">
            {{ content | safe }}
        </div>

        {% if source %}
            <div class="sources">
          zdroj: <a href="{{ source }}">{{ source }}</a>
            </div>
        {% endif %}

        <p>
            <a href="{{ '/' | url }}">← Home</a>
        </p>
    </section>
</div>

{{ end }}